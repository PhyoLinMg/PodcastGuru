<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/darker_gray"
    android:layoutDirection="ltr"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#FFBEBEBE"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@id/exo_progress_placeholder"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#FFBEBEBE"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_track"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/exo_prev"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/exo_controls_previous"
            android:contentDescription="prev" />

        <ImageButton
            android:id="@id/exo_play"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/exo_controls_play"
            android:contentDescription="play" />

        <ImageButton
            android:id="@id/exo_pause"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/exo_controls_pause"
             />

        <ImageButton
            android:id="@id/exo_next"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/exo_controls_next"
            android:contentDescription="next" />

    </LinearLayout>

</RelativeLayout>